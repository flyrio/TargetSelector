<Project Sdk="Dalamud.CN.NET.Sdk/13.1.0">
    <PropertyGroup>
        <Version>3.0.0.1</Version>
        <Description>TargetSelector</Description>
        <PackageProjectUrl>https://github.com/flyrio/TargetSelector</PackageProjectUrl>
        <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
        <IsPackable>false</IsPackable>

        <!-- 添加以下基本配置 -->
        <TargetFramework>net9.0</TargetFramework> <!-- 或其他适合的目标框架 -->
        <Platforms>x64</Platforms>
        <Configurations>Debug;Release</Configurations>
        <OutputType>Library</OutputType>
        <LangVersion>latest</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup>
        <NoWarn>CA1416;CS1998;1701;1702;CS0414;CS8601;CS8602;CS8604;CS8603;IDE1006;IDE0300;MSB3270;MSB324;CS0649;CA2211;CS8509;CS8625;MSB3305;CS8618;CS8600;CS8605;CS8620;CS0436;CS0169;CS0105;CS1591</NoWarn>
        <WarningsAsErrors>CS4014</WarningsAsErrors>
    </PropertyGroup>

    <!-- 添加 Debug 配置 -->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
        <DebugType>full</DebugType>
        <DebugSymbols>true</DebugSymbols>
    </PropertyGroup>

    <!-- 添加 Release 配置 -->
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
        <DebugType>pdbonly</DebugType>
        <Optimize>true</Optimize>
    </PropertyGroup>

    <ItemGroup>
        <Content Include=".github\workflows\release.yml" />
    </ItemGroup>

    <ItemGroup>
      <Reference Include="ECommons">
        <HintPath>C:\Users\10576\Downloads\AE3.0\AEAssistCNVersion\AEAssist\ECommons.dll</HintPath>
      </Reference>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Remove="DalamudPackager" />
      <PackageReference Remove="DotNet.ReproducibleBuilds" />
    </ItemGroup>
</Project>
